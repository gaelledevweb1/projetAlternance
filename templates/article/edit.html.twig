				{{ form_errors(form.ArticleRef) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.ArticleName) }}
			{{ form_widget(form.ArticleName) }}
			<div class="form-error">
				{{ form_errors(form.ArticleName) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.ArticleImages) }}
			{{ form_widget(form.ArticleImages) }}
			<div class="form-error">
				{{ form_errors(form.ArticleImages) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.ArticleThumbnails) }}
			{{ form_widget(form.ArticleThumbnails) }}
			<div class="form-error">
				{{ form_errors(form.ArticleThumbnails) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.ArticleStockQuantity) }}
			{{ form_widget(form.ArticleStockQuantity) }}
			<div class="form-error">
				{{ form_errors(form.ArticleStockQuantity) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.ArticleDescription) }}
			{{ form_widget(form.ArticleDescription) }}
			<div class="form-error">
				{{ form_errors(form.ArticleDescription) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.BoughtPrice) }}
			{{ form_widget(form.BoughtPrice) }}
			<div class="form-error">
				{{ form_errors(form.BoughtPrice) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.SellpriceHT) }}
			{{ form_widget(form.SellpriceHT) }}
			<div class="form-error">
				{{ form_errors(form.SellpriceHT) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.SellPriceTTC) }}
			{{ form_widget(form.SellPriceTTC) }}
