{% extends 'base.html.twig' %}


{% block content %}
	{% include 'frag/adminSite.frag.html.twig' %}
	{#template de la navbar #}

	<div class="container">


		<h1>Modification d'un  article</h1>


		{# aller sur cette page :https://symfony.com/doc/current/form/form_customization.html #}
		{# {{form(form)}} #}

		{{ form_start(form) }}

		<div class="form-error"></div>

		<div class="form-group">
			{{ form_label(form.ArticleRef) }}
			{{ form_widget(form.ArticleRef) }}
