				{{ form_errors(form.SellPriceTTC) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.TVA) }}
			{{ form_widget(form.TVA) }}
			<div class="form-error">
				{{ form_errors(form.TVA) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.Details) }}
			{{ form_widget(form.Details) }}
			<div class="form-error">
				{{ form_errors(form.Details) }}
			</div>
		</div>

		<div class="form-group">
			{{form_row(form.submit)}}
		</div>


		{{ form_end(form) }}
	</div>
{% endblock %}
