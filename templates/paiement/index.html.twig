		</div> #}


		{# read and display just one flash message type #}
			{% for message in app.flashes('success') %}
				<div class=" alert alert-success">
				 {{ message }}
				</div>
			{% endfor %}

        <div class="count">
           <h5> Il y a  {{paiements.getTotalItemCount}} paiements au total </h5>
           
        </div>

		<table class=" table table-sm table-info ">
			<thead>
				<tr>
					<th scope="col">Numero</th>
					<th scope="col">BankName</th>
                    <th scope="col">CardName</th>
                    <th scope="col">CardNumber</th>
                    <th scope="col">CardNetwork</th>
                    <th scope="col">CardHoldername</th>
                    <th scope="col">ExpirationDate</th>
					<th scope="col">CVCCode</th>
					<th scope="col">SecurityCard</th>
					<th scope="col">Currency</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
					<th scope="col">Lire</th>

					
				</tr>
			</thead>
 

            
			<tbody>
				{% for paiement in paiements %}
					<tr class="table-info">
						<td class="table-info">{{paiement.ID}}</td>
						<td class="table-info">{{paiement.BankName}}</td>
                        <td class="table-info">{{paiement.CardName}}</td>
                        <td class="table-info">{{paiement.CardNumber}}</td>
                        <td class="table-info">{{paiement.CardNetwork}}</td>
                        <td class="table-info">{{paiement.CardHoldername}}</td>
						<td class="table-info">{{paiement.ExpirationDate|date('d-m-Y')}}</td>
						<td class="table-info">{{paiement.CVCCode}}</td>
						<td class="table-info">{{paiement.SecurityCard}}</td>
						<td class="table-info">{{paiement.Currency}}</td>
						<td class="table-info">
							<a href="{{path('app_paiement.edit', {'id': paiement.id})}}" class="btn btn-info">
								Modifier
							</a>
						</td>
						<td class="table-info">
							<a href="{{path('app_paiement.delete', {'id': paiement.id})}}" class="btn btn-warning" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
								Supprimer
							</a>
							
						</td>
						<td class="table-info">
							{% if app.request.attributes.get('_route') != 'app_paiement.show' %}
								<a href="{{ path('app_paiement.show', {id: paiement.id}) }}" class="btn btn-info">lire</a>
							{% endif %}


						</td>
	
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# display navigation #}
		<div class="navigation d-flex  justify-content-center p-3 mb-2 bg-info text-white ">
			{{ knp_pagination_render(paiements) }}
		</div>


	</div>
{% endblock %}
