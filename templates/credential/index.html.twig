				</tr>
			</thead>

            
			<tbody>
				{% for credential in credentiales %}
					<tr class="table-info">
						<td class="table-info">{{credential.id}}</td>
						<td class="table-info">{{credential.userName}}</td>
                        <td class="table-info">{{credential.userEmail}}</td>
                        <td class="table-info">{{credential.password}}</td>
						<td class="table-info">{{credential.roles|join(', ')}}</td>
						<td>
                        <a href="{{ path('credential_promote', {id: credential.id}) }}">Promote to Admin</a>
                    </td>
                        <td class="table-info">{{credential.user ? credential.user.id: 'N/A'}}</td>

						
						
					</tr>
				{% endfor %}

               
			</tbody>
		</table>

