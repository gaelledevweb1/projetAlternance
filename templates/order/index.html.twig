		<table class=" table table-sm table-info ">
			<thead>
				<tr>
					<th scope="col">Numero</th>
					<th scope="col">OrderDate</th>
                    <th scope="col">Paid</th>
                    <th scope="col">Status</th>
                    <th scope="col">Delivered</th>
                    <th scope="col">DeliveryDate</th>
                    <th scope="col">DeliveryInfo</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
					<th scope="col">Lire</th>

					
				</tr>
			</thead>

            
			<tbody>
				{% for order in orders %}
					<tr class="table-info">
						<td class="table-info">{{order.ID}}</td>
						<td class="table-info">{{order.OrderDate|date('d-m-Y')}}</td>
                        <td class="table-info">{{order.Paid}}</td>
                        <td class="table-info">{{order.Status}}</td>
                        <td class="table-info">{{order.Delivered}}</td>
                        <td class="table-info">{{order.DeliveryDate|date('d-m-Y')}}</td>
						<td class="table-info">
							<a href="{{path('app_order.edit', {'id': order.id})}}" class="btn btn-info">
								Modifier
							</a>
						</td>
						<td class="table-info">
							<a href="{{path('app_order.delete', {'id': order.id})}}" class="btn btn-warning" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
								Supprimer
							</a>
							
						</td>
						<td class="table-info">
							{% if app.request.attributes.get('_route') != 'app_order.show' %}
								<a href="{{ path('app_order.show', {id: order.id}) }}" class="btn btn-info">lire</a>
							{% endif %}


						</td>
                    
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# display navigation #}
		<div class="navigation d-flex  justify-content-center p-3 mb-2 bg-info text-white ">
